<%= content_for(:body_class) { "sessions"} %>
<h3>Login!</h3>

<%= form_tag do %>

<div class="form-group">
  <%= label_tag :email %>
  <%= email_field_tag :email,'', placeholder: 'Email', class: 'form-control' %>
</div>

<div class="form-group">
  <%= label_tag :password %>
  <%= link_to "(forgot password)", new_password_reset_path %>
  <%= password_field_tag :password, '', placeholder: 'Password', class: 'form-control' %>
</div>

<div class="checkbox">
  <%= label_tag :remember_me, class: "checkbox inline" do %>
    <%= check_box_tag :remember_me, class: 'form-control' %>
    <span>Remember me</span>
  <% end %>
</div>

<%= submit_tag "Log in", class: 'btn btn-primary' %>

<% end %>

<p>New User? <%= link_to "Sign up now!", signup_path %></p>

<%= form_for @workout do |f| %>
<%= f.label :date %>
<%= f.date_field :date %>
<%= f.submit %>

<div class="">
  Add Another:
<%= f.submit "AMRAP"%>
<%= f.submit "Rounds for Time"%>
<%= f.submit "Strength" %>

</div>
<% end %>
<%= link_to "Delete Workout", workout_path, method: :delete, data: {confirm: "Are you sure you want to delete this workout?"} %>
<% if @workout.amrap %>
<% @workout.amrap.each do |amrap| %>
<h3><%= amrap.time %>
  minute AMRAP</h3>
  <p>Score:
    <%= amrap.score %>
    rounds <%= amrap.additional_reps %> reps</p>
  <%= link_to "Edit", edit_workout_amrap_path(@workout, amrap) %>
<% amrap.amrapmovements.each do |movement| %>
<p>RX:
  <%= movement.rx_reps %>
  <%= movement.rx_movement %>
  <%= movement.rx_weight %>
  <%= movement.rx_unit %></p>
<p>Scaled:
  <%= movement.scaled_reps %>
  <%= movement.scaled_movement %>
  <%= movement.scaled_weight %>
  <%= movement.scaled_unit %></p>
<% end %>
<h4>Notes:</h4>
<p><%= amrap.notes %></p>
<% end %>
<% end %>

<% if @workout.rft %>
<% @workout.rft.each do |rft| %>
<h3><%= rft.rounds %>
  Rounds for Time</h3>
<p>Score:
  <%= rft.score %>
  </p>
    <%= link_to "Edit", edit_workout_rft_path(@workout, rft) %>
<% rft.rftmovements.each do |movement| %>
<p>RX:
  <%= movement.rx_reps %>
  <%= movement.rx_movement %>
  <%= movement.rx_weight %>
  <%= movement.rx_unit %></p>
<p>Scaled:
  <%= movement.scaled_reps %>
  <%= movement.scaled_movement %>
  <%= movement.scaled_weight %>
  <%= movement.scaled_unit %></p>
<% end %>
<% end %>
<% end %>

<% if @workout.strength %>
<% @workout.strength.each do |strength| %>
  <p>STRENGTH</p>
    <%= link_to "Edit", edit_workout_strength_path(@workout, strength) %>
<% end %>
<% end %>

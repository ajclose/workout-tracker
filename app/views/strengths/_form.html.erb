<%= form_for([@workout, @strength]) do |f| %>
  <% if @strength.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        There were <%= pluralize(@strength.errors.count, "error") %>.
      </div>
      <ul>
        <% @strength.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
  <%= f.label :movement, class: "control-label" %>
  <%= f.text_field :movement, placeholder: "Enter movement name", class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :sets, class: "control-label" %>
  <%= f.text_field :sets, placeholder: "Enter number of sets completed", class: "form-control" %>
</div>
<div class="form-group">
<%= f.label :reps, class: "control-label" %>
<%= f.text_field :reps, placeholder: "Enter number of reps per set", class: "form-control" %>
</div>
<div class="form-group">
<%= f.label :weight, class: "control-label" %>
<%= f.text_field :weight, placeholder: "Enter weight lifted", class: "form-control" %>
</div>
<div class="form-group">
<%= f.label :notes, class: "control-label" %>
<%= f.text_area :notes, placeholder: "Enter notes about workout", class: "form-control" %>
</div>

<div class="form-group">
<%= f.submit yield(:button_text), class: "btn btn-success" %>
<% if controller_name == 'strengths' && action_name == 'edit' %>
<%= link_to "Delete Movement", workout_strength_path(@workout, @strength), method: :delete, data: {confirm: "Are you sure you want to delete this workout?"}, class: "btn btn-danger" %>
<% end %>
</div>

<% end %>

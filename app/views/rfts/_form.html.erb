<%= form_for([@workout, @rft]) do |f| %>
  <% if @rft.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        There were <%= pluralize(@rft.errors.count, "error") %>.
      </div>
      <ul>
        <% @rft.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
  <%= f.label :name, class: "control-label" %>
  <%= f.text_field :name, placeholder: "Enter workout name (if applicable)", class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :rounds, class: "control-label" %>
  <%= f.text_field :rounds, placeholder: "Enter number of rounds to complete", class: "form-control" %>
</div>
<div class="form-group">
<%= f.label :score, class: "control-label" %>
<%= f.text_field :score, placeholder: "Enter time completed", class: "form-control" %>
</div>
<div class="form-group">
<%= f.label :notes, class: "control-label" %>
<%= f.text_area :notes, placeholder: "Enter notes about workout", class: "form-control" %>
</div>

<div class="form-group">
<%= f.submit yield(:button_text), class: "btn btn-success" %>
<% if controller_name == 'rfts' && action_name == 'edit' %>
<%= link_to "Delete RFT", workout_rft_path(@workout, @rft), method: :delete, data: {confirm: "Are you sure you want to delete this workout?"}, class: "btn btn-danger" %>
<% end %>
</div>

<% end %>
